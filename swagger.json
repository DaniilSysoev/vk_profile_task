definitions:
  Friend:
    required:
      - user
    type: object
    properties:
      id:
        title: ID
        type: integer
        readOnly: true
      user:
        title: User
        type: integer
      friends:
        type: array
        items:
          type: integer
        uniqueItems: true
  Requests:
    required:
      - sender_id
      - receiver_id
    type: object
    properties:
      id:
        title: ID
        type: integer
        readOnly: true
      sender_id:
        title: Sender id
        type: integer
      receiver_id:
        title: Receiver id
        type: integer
  User:
    required:
      - username
      - password
    type: object
    properties:
      id:
        title: ID
        type: integer
        readOnly: true
      username:
        title: Имя пользователя
        description: Обязательное поле. Не более 150 символов. Только буквы, цифры
          и символы @/./+/-/_.
        type: string
        pattern: ^[\w.@+-]+$
        maxLength: 150
        minLength: 1
      password:
        title: Пароль
        type: string
        maxLength: 128
        minLength: 1
